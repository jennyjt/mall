        select
        <include refid="Base_Column_List"/>
        from job_meta
        where job_name = #{jobName,jdbcType=VARCHAR}
        limit 1
    </select>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.util.List">
        select
        <include refid="Base_Column_List"/>
        from job_meta
